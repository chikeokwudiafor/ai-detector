run = "python app.py"
[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "python app.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 44510387
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "fuser -k 5000/tcp || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 1"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"

[[workflows.workflow]]
name = "Test App"
author = 44510387
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app_test.py"

[[ports]]
localPort = 5000
externalPort = 80
