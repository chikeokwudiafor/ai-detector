run = "python app.py"
[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "python app.py"]

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 44510387
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"python app.py\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"

[[workflows.workflow]]
name = "Test App"
author = 44510387
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app_test.py"

[[ports]]
localPort = 5000
externalPort = 80
